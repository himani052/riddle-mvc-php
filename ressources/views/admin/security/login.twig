    <section class="vh-100" style="background-color: #508bfc;" xmlns="http://www.w3.org/1999/html">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <form id="loginForm" method="POST" action="{{ route('admin.login') }}">
                            <h3 class="mb-5">Login</h3>

                            <div class="form-outline mb-4">
                                <input type="text" name="email" id="email" placeholder="email" class="form-control form-control-lg  {% if error.email %}input-error{% endif %}"/>

                                {% if error.email %}
                                <span class="text-danger">
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                    {{ error.email }}
                                </span>
                                {% endif %}

                            </div>

                            <div class="form-outline mb-4">
                                <input type="text" name="password" id="password" placeholder="password" class="form-control form-control-lg  {% if error.password %}input-error{% endif %}"/>
                                {% if error.password %}
                                    <span class="text-danger">
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                    {{ error.password }}
                                </span>
                                {% endif %}


                            </div>


                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>


                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



{% endblock %}