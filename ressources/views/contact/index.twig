{% extends "layouts/default.twig" %}

{% block content %}


    <section id="contact" class="bg-light mt-5" >
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-md-6">
                    <h1 class="font-weight-bold">Nous contacter</h1>
                    <h2 class="text-sm-left">Besoin d'informations ? Envoyez nous un message via ce formulaire ;)</h2>
                    <form method="post" action="{{route('contact.send')}}">
                        <fieldset>
                            <label for="mail" class="font-weight-bold">Votre email</label>
                            <input type="text" name="mail" id="mail" placeholder="E-Mail" size="30" class="form-control"><br />

                            <label for="prenom" class="font-weight-bold">Votre pr√©nom</label>
                            <input type="text" name="prenom" id="prenom" required class="form-control"/><br />

                            <label for="message">Message</label>
                            <textarea name="message" id="message" class="form-control"></textarea>
                            <input type="submit" value="Envoyer" class="btn btn-yellow-square"/>
                        </fieldset>
                    </form>
                </div>
                <div class="col-12 col-md-6">
                    <img src="/public/assets/img/svg/reset-password.svg" alt="forgotten-password">
                </div>
            </div>
        </div>
    </section>




{% endblock %}