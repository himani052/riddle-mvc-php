{% extends "layouts/default.twig" %}

{% block content %}


    <section id="parcours-list">
        <div class="row">

            {% for course in courses %}
                <div class="box-parcours position-relative col-12 col-md-6 col-lg-4 bg-light"
                     style="background-image: url('{{ course.imageCourse }}')">
                    <div class="filter-image">
                        <div class="m-5">
                            <h1>{{ course.titleCourse }}</h1>
                            <span class="mt-3"><i class="fa-solid fa-location-dot mr-2"></i>Lieu - Ville , FR</span>
                            <p class="mt-3">{{ course.descriptionCourse[0:200]|striptags }} ...</p>
                            <ul>
                                <li>#tag1</li>
                                <li>#tag2</li>
                            </ul>
                            <a href="{{ route('course.show',{'id' : course.idCourse}) }}"
                               class="btn play-btn-white float-right"><i class="fa-solid fa-play"></i></a>
                        </div>
                    </div>
                </div>

            {% endfor %}

        </div>

    </section>

{% endblock %}